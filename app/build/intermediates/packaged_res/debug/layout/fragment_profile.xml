<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient_orange"
                android:alpha="0.8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfilePic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:background="@color/white"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/white" />

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alex Johnson"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/tvProfileGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ Muscle Gain"
                    android:textSize="14sp"
                    android:textColor="#CCFFFFFF"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Stats Row -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-24dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/bg_card"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <TextView android:id="@+id/tvWeight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="78" android:textSize="24sp" android:textStyle="bold" android:textColor="@color/primary" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="kg" android:textSize="12sp" android:textColor="@color/text_secondary" />
                </LinearLayout>

                <View android:layout_width="1dp" android:layout_height="50dp" android:background="@color/white_10" />

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <TextView android:id="@+id/tvHeight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="175" android:textSize="24sp" android:textStyle="bold" android:textColor="@color/accent" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="cm" android:textSize="12sp" android:textColor="@color/text_secondary" />
                </LinearLayout>

                <View android:layout_width="1dp" android:layout_height="50dp" android:background="@color/white_10" />

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <TextView android:id="@+id/tvBMI" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="25.5" android:textSize="24sp" android:textStyle="bold" android:textColor="@color/carbs_color" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BMI" android:textSize="12sp" android:textColor="@color/text_secondary" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Weekly Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekly Progress"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <!-- Weekly Calories Chart Area -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/bg_card"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom|center_horizontal"
                    android:padding="16dp">

                    <!-- Bar chart simulation -->
                    <LinearLayout android:id="@+id/barMon" android:layout_width="0dp" android:layout_height="80dp" android:layout_weight="1" android:background="@drawable/bg_gradient_orange" android:layout_marginEnd="4dp" android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="M" android:textColor="@color/white" android:textSize="11sp" /></LinearLayout>
                    <LinearLayout android:id="@+id/barTue" android:layout_width="0dp" android:layout_height="100dp" android:layout_weight="1" android:background="@drawable/bg_gradient_orange" android:layout_marginEnd="4dp" android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="T" android:textColor="@color/white" android:textSize="11sp" /></LinearLayout>
                    <LinearLayout android:id="@+id/barWed" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1" android:background="@drawable/bg_gradient_orange" android:layout_marginEnd="4dp" android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="W" android:textColor="@color/white" android:textSize="11sp" /></LinearLayout>
                    <LinearLayout android:id="@+id/barThu" android:layout_width="0dp" android:layout_height="110dp" android:layout_weight="1" android:background="@drawable/bg_gradient_orange" android:layout_marginEnd="4dp" android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="T" android:textColor="@color/white" android:textSize="11sp" /></LinearLayout>
                    <LinearLayout android:id="@+id/barFri" android:layout_width="0dp" android:layout_height="90dp" android:layout_weight="1" android:background="@drawable/bg_gradient_orange" android:layout_marginEnd="4dp" android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="F" android:textColor="@color/white" android:textSize="11sp" /></LinearLayout>
                    <LinearLayout android:id="@+id/barSat" android:layout_width="0dp" android:layout_height="70dp" android:layout_weight="1" android:background="@drawable/bg_gradient_purple" android:layout_marginEnd="4dp" android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="S" android:textColor="@color/white" android:textSize="11sp" /></LinearLayout>
                    <LinearLayout android:id="@+id/barSun" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:background="@drawable/bg_card_dark" android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="S" android:textColor="@color/text_secondary" android:textSize="11sp" /></LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Achievements -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Achievements ðŸ†"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="8dp" app:cardCornerRadius="16dp" app:cardBackgroundColor="@color/bg_card" app:cardElevation="0dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp" android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ”¥" android:textSize="32sp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="7" android:textSize="22sp" android:textStyle="bold" android:textColor="@color/primary" android:layout_marginTop="8dp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Day Streak" android:textSize="12sp" android:textColor="@color/text_secondary" android:layout_marginTop="2dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="8dp" app:cardCornerRadius="16dp" app:cardBackgroundColor="@color/bg_card" app:cardElevation="0dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp" android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ…" android:textSize="32sp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="24" android:textSize="22sp" android:textStyle="bold" android:textColor="@color/accent" android:layout_marginTop="8dp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Workouts" android:textSize="12sp" android:textColor="@color/text_secondary" android:layout_marginTop="2dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:cardCornerRadius="16dp" app:cardBackgroundColor="@color/bg_card" app:cardElevation="0dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp" android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="âš¡" android:textSize="32sp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-3kg" android:textSize="22sp" android:textStyle="bold" android:textColor="@color/carbs_color" android:layout_marginTop="8dp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Progress" android:textSize="12sp" android:textColor="@color/text_secondary" android:layout_marginTop="2dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Settings Options -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/bg_card"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout android:id="@+id/itemGoals" android:layout_width="match_parent" android:layout_height="56dp" android:orientation="horizontal" android:gravity="center_vertical" android:padding="16dp" android:clickable="true" android:focusable="true">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŽ¯" android:textSize="20sp" />
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="My Goals" android:textSize="15sp" android:textColor="@color/white" android:layout_marginStart="12dp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â€º" android:textSize="20sp" android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/white_10" />

                    <LinearLayout android:id="@+id/itemNotifications" android:layout_width="match_parent" android:layout_height="56dp" android:orientation="horizontal" android:gravity="center_vertical" android:padding="16dp" android:clickable="true" android:focusable="true">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ””" android:textSize="20sp" />
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Notifications" android:textSize="15sp" android:textColor="@color/white" android:layout_marginStart="12dp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â€º" android:textSize="20sp" android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/white_10" />

                    <LinearLayout android:id="@+id/itemUnits" android:layout_width="match_parent" android:layout_height="56dp" android:orientation="horizontal" android:gravity="center_vertical" android:padding="16dp" android:clickable="true" android:focusable="true">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“" android:textSize="20sp" />
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Units &amp; Measures" android:textSize="15sp" android:textColor="@color/white" android:layout_marginStart="12dp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â€º" android:textSize="20sp" android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Logout -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Log Out"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_card_dark"
                app:cornerRadius="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
