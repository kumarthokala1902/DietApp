<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/bg_card"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with gradient -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <View
                android:id="@+id/viewGradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient_orange" />

            <TextView
                android:id="@+id/tvPlanEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:text="ðŸ¥—"
                android:textSize="72sp"
                android:alpha="0.4"
                android:layout_marginEnd="-8dp"
                android:layout_marginBottom="-8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvPlanCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BULKING"
                    android:textSize="10sp"
                    android:textColor="#CCFFFFFF"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/tvPlanName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muscle Gain Plan"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvPlanCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3,200"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kcal/day"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white_10" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvPlanMeals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="meals/day"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white_10" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvPlanDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/carbs_color" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="weeks"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </LinearLayout>

        <!-- Start Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartPlan"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Start Plan"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_primary"
            app:cornerRadius="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
