<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/bg_card"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Emoji Icon -->
        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp">
            <View
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_gradient_purple"
                android:alpha="0.6" />
            <TextView
                android:id="@+id/tvWorkoutEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸ‹ï¸"
                android:textSize="32sp" />
        </FrameLayout>

        <!-- Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvWorkoutName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bench Press"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:textSize="10sp"
                    android:textColor="@color/carbs_color"
                    android:background="@drawable/bg_macro_chip"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvWorkoutMuscle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest â€¢ Triceps â€¢ Shoulders"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

            <!-- Sets x Reps -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvSets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 sets"
                    android:textSize="12sp"
                    android:textColor="@color/primary"
                    android:background="@drawable/bg_macro_chip"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvReps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-12 reps"
                    android:textSize="12sp"
                    android:textColor="@color/accent"
                    android:background="@drawable/bg_macro_chip"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
