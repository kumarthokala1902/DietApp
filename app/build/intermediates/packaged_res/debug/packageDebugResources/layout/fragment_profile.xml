<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient_orange"
                android:alpha="0.8" />

            <!-- Edit Profile Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfileTop"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Edit"
                android:textColor="@color/white"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfilePic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:background="@color/white"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/white" />

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/tvProfileGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ Goal"
                    android:textSize="14sp"
                    android:textColor="#CCFFFFFF"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Stats Row -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-24dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/bg_card"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <TextView android:id="@+id/tvWeight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="24sp" android:textStyle="bold" android:textColor="@color/primary" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="kg" android:textSize="12sp" android:textColor="@color/text_secondary" />
                </LinearLayout>

                <View android:layout_width="1dp" android:layout_height="50dp" android:background="@color/white_10" />

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <TextView android:id="@+id/tvHeight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="24sp" android:textStyle="bold" android:textColor="@color/accent" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="cm" android:textSize="12sp" android:textColor="@color/text_secondary" />
                </LinearLayout>

                <View android:layout_width="1dp" android:layout_height="50dp" android:background="@color/white_10" />

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                    <TextView android:id="@+id/tvBMI" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--" android:textSize="24sp" android:textStyle="bold" android:textColor="@color/carbs_color" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BMI" android:textSize="12sp" android:textColor="@color/text_secondary" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Settings Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/bg_card"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout android:id="@+id/itemEditProfile" android:layout_width="match_parent" android:layout_height="56dp" android:orientation="horizontal" android:gravity="center_vertical" android:padding="16dp" android:clickable="true" android:focusable="true">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ‘¤" android:textSize="20sp" />
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Edit Personal Info" android:textSize="15sp" android:textColor="@color/white" android:layout_marginStart="12dp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â€º" android:textSize="20sp" android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/white_10" />

                    <LinearLayout android:id="@+id/itemGoals" android:layout_width="match_parent" android:layout_height="56dp" android:orientation="horizontal" android:gravity="center_vertical" android:padding="16dp" android:clickable="true" android:focusable="true">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸŽ¯" android:textSize="20sp" />
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="My Goals" android:textSize="15sp" android:textColor="@color/white" android:layout_marginStart="12dp" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â€º" android:textSize="20sp" android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Log Out"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/bg_card_dark"
                app:cornerRadius="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
