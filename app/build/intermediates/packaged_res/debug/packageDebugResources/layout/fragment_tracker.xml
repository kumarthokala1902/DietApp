<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nutrition ðŸ“Š"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:background="@drawable/bg_card_dark"
                android:padding="10dp" />
        </LinearLayout>

        <!-- Calorie Ring Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/bg_card"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calorie Balance"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <!-- 3-column stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2,400" android:textSize="22sp" android:textStyle="bold" android:textColor="@color/white" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Goal" android:textSize="12sp" android:textColor="@color/text_secondary" android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                        <TextView android:id="@+id/tvCaloriesEaten" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1,840" android:textSize="22sp" android:textStyle="bold" android:textColor="@color/primary" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Eaten" android:textSize="12sp" android:textColor="@color/text_secondary" android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="center">
                        <TextView android:id="@+id/tvCaloriesLeft" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="560" android:textSize="22sp" android:textStyle="bold" android:textColor="@color/accent" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Remaining" android:textSize="12sp" android:textColor="@color/text_secondary" android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Progress bar -->
                <ProgressBar
                    android:id="@+id/pbDailyCalories"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:progressDrawable="@drawable/progress_bar_gradient"
                    android:max="100"
                    android:progress="77"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_macro_chip" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Macros Breakdown -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Macros Breakdown"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="24dp" />

        <!-- Protein Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/bg_card"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ’ª Protein" android:textSize="14sp" android:textColor="@color/white" android:textStyle="bold" />
                    <android.widget.Space android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />
                    <TextView android:id="@+id/tvProteinAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="142g / 180g" android:textSize="14sp" android:textColor="@color/protein_color" />
                </LinearLayout>
                <ProgressBar android:id="@+id/pbProtein" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="8dp" android:progressTint="@color/protein_color" android:max="100" android:progress="79" android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Carbs Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/bg_card"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="âš¡ Carbohydrates" android:textSize="14sp" android:textColor="@color/white" android:textStyle="bold" />
                    <android.widget.Space android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />
                    <TextView android:id="@+id/tvCarbsAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="220g / 280g" android:textSize="14sp" android:textColor="@color/carbs_color" />
                </LinearLayout>
                <ProgressBar android:id="@+id/pbCarbs" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="8dp" android:progressTint="@color/carbs_color" android:max="100" android:progress="79" android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fats Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/bg_card"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ¥‘ Fats" android:textSize="14sp" android:textColor="@color/white" android:textStyle="bold" />
                    <android.widget.Space android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />
                    <TextView android:id="@+id/tvFatsAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="58g / 75g" android:textSize="14sp" android:textColor="@color/fat_color" />
                </LinearLayout>
                <ProgressBar android:id="@+id/pbFats" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="8dp" android:progressTint="@color/fat_color" android:max="100" android:progress="77" android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Water Tracker -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Water Intake ðŸ’§"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="24dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardWaterTracker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/bg_card"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tvWaterAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2.1 / 3.0 L"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddWater"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="+ 250ml"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:background="@drawable/bg_gradient_green"
                        app:cornerRadius="8dp" />
                </LinearLayout>

                <!-- Water glasses visualization -->
                <LinearLayout
                    android:id="@+id/llWaterGlasses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bottom space -->
        <View android:layout_width="match_parent" android:layout_height="20dp" />

    </LinearLayout>
</ScrollView>
