<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/bg_card"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Meal Emoji/Icon -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp">
            <View
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_gradient_orange"
                android:alpha="0.3" />
            <TextView
                android:id="@+id/tvMealEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸ³"
                android:textSize="28sp" />
        </FrameLayout>

        <!-- Meal Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvMealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvMealItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oats, Eggs, Banana"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

            <!-- Macro chips row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvMealProtein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32g P"
                    android:textSize="10sp"
                    android:textColor="@color/protein_color"
                    android:background="@drawable/bg_macro_chip"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvMealCarbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48g C"
                    android:textSize="10sp"
                    android:textColor="@color/carbs_color"
                    android:background="@drawable/bg_macro_chip"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvMealFat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12g F"
                    android:textSize="10sp"
                    android:textColor="@color/fat_color"
                    android:background="@drawable/bg_macro_chip"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Calories -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvMealCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="480"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kcal"
                android:textSize="10sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
